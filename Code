CPp


#include <iostream>
#include <vector>
using namespace std;

int findMax(vector<int>& arr, int index) {
    if (index == arr.size() - 1) {
        return arr[index];
    }
    int nextMax = findMax(arr, index + 1);
    return max(arr[index], nextMax);
}

int main() {
    vector<int> arr = {3, 5, 1, 9, 2};
    cout << "Максимальный элемент: " << findMax(arr, 0) << endl;
    return 0;
}





PYt


def find_max(arr, index):
    if index == len(arr) - 1:
        return arr[index]
    next_max = find_max(arr, index + 1)
    return max(arr[index], next_max)

arr = [3, 5, 1, 9, 2]
print("Максимальный элемент:", find_max(arr, 0))





JAv


import java.util.*;

public class Main {
    public static int findMax(int[] arr, int index) {
        if (index == arr.length - 1) {
            return arr[index];
        }
        int nextMax = findMax(arr, index + 1);
        return Math.max(arr[index], nextMax);
    }

    public static void main(String[] args) {
        int[] arr = {3, 5, 1, 9, 2};
        System.out.println("Максимальный элемент: " + findMax(arr, 0));
    }
}
